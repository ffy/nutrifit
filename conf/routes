# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /users/list                 controllers.UserController.list
GET     /users/:id                  controllers.UserController.user(id: Int)
GET     /users                      controllers.UserController.create
POST    /users                      controllers.UserController.postForm

GET     /food                       controllers.Application.addFood
POST    /food                       controllers.Application.addFood

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    